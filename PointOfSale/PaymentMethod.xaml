<UserControl x:Class="PointOfSale.PaymentMethod"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
                <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Select A Payment Option" FontSize="40"/>
        <Button Click="CashSelection" Grid.Row="1" Margin="8" Width="400">
            Cash Payment
        </Button>
        <Button Click="CreditSelection" Grid.Row="2" Margin="8" Width="400">
            Credit Payment
        </Button>
        <TextBlock Name="ErrorReport" Foreground="Red" Grid.Row="3" Text="" FontSize="30"/>
    </Grid>
</UserControl>
